<h1>Edit Project</h1>

<%= form_with model: @project, local: true do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="actions">
    <%= form.submit 'Update Project' %>
  </div>
<% end %>

<%= link_to 'Back to Projects', projects_path %>
